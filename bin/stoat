#!/bin/bash
# Stoat wrapper

# Locate the position of the stoat directory
SOURCE="${BASH_SOURCE[0]}"
while [ -h "$SOURCE" ]; do # resolve $SOURCE until the file is no longer a symlink
	SDIR="$( cd -P "$( dirname "$SOURCE" )" >/dev/null 2>&1 && pwd )"
	SOURCE="$(readlink "$SOURCE")"
	[[ $SOURCE != /* ]] && SOURCE="$DIR/$SOURCE"
	# if $SOURCE was a relative symlink, we need to resolve it relative to the path where the symlink file was located
done
SDIR="$( cd -P "$( dirname "$SOURCE" )" >/dev/null 2>&1 && pwd )"

key="$1"
shift

case $key in
	make-pro) $SDIR/proseq-make.sh $* --sdir $SDIR ;;
	make-ted) $SDIR/tedseq-make.sh $* --sdir $SDIR ;;
	align-ted2) $SDIR/ted2-align.sh $* --sdir $SDIR ;;
	make-ted2) $SDIR/ted2-make.sh $* --sdir $SDIR ;;
	pap) $SDIR/pap.sh $* --sdir $SDIR ;;
	prop) $SDIR/prop.sh $* --sdir $SDIR ;;
	redef3) $SDIR/new3CPS.sh $* --sdir $SDIR ;;
	elongHMM) $SDIR/elong-hmm.sh $* --sdir $SDIR ;;
	*)
		echo -e "" >&2
		echo -e "stoat:   stereoscopic analysis of the transcriptome using PRO-seq and TED-seq" >&2
		echo -e "version: 0.2.220302" >&2
		echo -e "" >&2
		echo -e "usage:   stoat <command> [options]" >&2
		echo -e "" >&2
		echo -e "command: make-pro   process PRO-seq data" >&2
		echo -e "         make-ted   process TED-seq data" >&2
		echo -e "         align-ted2 align TED2 data" >&2
		echo -e "         make-ted2  process TED2 data" >&2
		echo -e "         redef3     redefine 3CPS in high resolution" >&2
		echo -e "         pap        generate polyA length profiles" >&2
		echo -e "         prop       generate PRO-seq profiles" >&2
		echo -e "         elongHMM   calculate PRO-seq elongation rates" >&2
		echo -e "" >&2
	;;
esac
